      OIDC_SUBJECT_IDENTIFIERS_PAIRWISE_SALT: \${OIDC_PAIRWISE_SALT}
      TTL_ACCESS_TOKEN: 1h
      TTL_REFRESH_TOKEN: 720h
      TTL_ID_TOKEN: 1h
      TTL_AUTH_CODE: 10m
      LOG_LEVEL: info
      LOG_FORMAT: json
