version: '3.8'

services:
  # PostgreSQL database for Ory services
  postgres:
    image: postgres:15-alpine
    container_name: ory-postgres
    environment:
      POSTGRES_DB: ory
      POSTGRES_USER: ory
      POSTGRES_PASSWORD: \${POSTGRES_PASSWORD}
      POSTGRES_MULTIPLE_DATABASES: kratos,hydra,keto
    volumes:
