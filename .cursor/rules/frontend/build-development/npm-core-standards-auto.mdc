#!/usr/bin/env node
const { execSync } = require('child_process');
const fs = require('fs');

console.log('ðŸ” Running comprehensive npm security audit...');

const auditChecks = [
  {
    name: 'Vulnerability Audit',
    command: 'npm audit --json',
    handler: (output) => {
      const audit = JSON.parse(output);
      if (audit.metadata.vulnerabilities.total > 0) {
        console.warn(`âš ï¸  Found ${audit.metadata.vulnerabilities.total} vulnerabilities`);
        console.log('High:', audit.metadata.vulnerabilities.high);
        console.log('Moderate:', audit.metadata.vulnerabilities.moderate);
        console.log('Low:', audit.metadata.vulnerabilities.low);
        return false;
      }
      return true;
    }
  },
  {
    name: 'Signature Verification',
    command: 'npm audit signatures',
    handler: (output) => {
      if (output.includes('verified')) {
        console.log('âœ… All package signatures verified');
        return true;
      }
      console.error('âŒ Package signature verification failed');
      return false;
    }
  },
  {
    name: 'Outdated Dependencies',
    command: 'npm outdated --json',
    handler: (output) => {
      try {
        const outdated = JSON.parse(output);
        const packages = Object.keys(outdated);
        if (packages.length > 0) {
          console.warn(`ðŸ“¦ ${packages.length} packages are outdated:`, packages);
          return true; // Don't fail on outdated packages
        }
        return true;
      } catch {
        return true; // No outdated packages
      }
    }
  }
];

let allPassed = true;

auditChecks.forEach(check => {
  console.log(`\nðŸ” ${check.name}...`);
  try {
    const output = execSync(check.command, { encoding: 'utf8', stdio: 'pipe' });
    if (!check.handler(output)) {
      allPassed = false;
    }
  } catch (error) {
    console.error(`âŒ ${check.name} failed:`, error.message);
    allPassed = false;
  }
});

if (allPassed) {
  console.log('\nâœ… All security checks passed!');
  process.exit(0);
} else {
  console.error('\nâŒ Some security checks failed');
  process.exit(1);
}

