      // React with SWC for faster builds
      million.vite({ auto: true }),
      react({
        // Enable React Fast Refresh
        fastRefresh: true,
        // SWC configuration
        jsxImportSource: '@emotion/react',
        babel: {
          plugins: ['@emotion/babel-plugin'],
