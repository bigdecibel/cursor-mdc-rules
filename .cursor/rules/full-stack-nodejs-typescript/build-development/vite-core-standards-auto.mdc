        // External dependencies (for library builds)
        external: isDevelopment ? [] : [
          // Externalize peer dependencies for library builds
          // 'react', 'react-dom'
        ],
      },
      
      // CSS optimization
      cssCodeSplit: true,
      cssMinify: isProduction,
    },
    
    // Path resolution
